{
    "model": {
        "units": 372,
        "filter_size": 128,
        "kernel_size": 9,
        "numb_conv": 3,
        "numb_lstm": 2,
        "pool_size": 9,
        "output_size": 15,

        "hmm": {
            "heads": 1,
            "use_reverse_strand": false,
            "parallel_factor": 1,

            "intron_state_chain": 1,
            "initial_exon_len": 100,
            "initial_intron_len": 10000,
            "initial_ir_len": 10000,
            "train_transitioner": false
        },
        "residual_conv": true,
        "multi_loss": false
    },

    "dataset": {
        "train_paths": [
            "path/to/data_*.tfrecords"
        ],
        "validation_paths": [
            "path/to/data_0.tfrecords"
        ],

        "batch_size": 500,
        "input_size": 6,
        "output_size": 15,
        "repeat": true,
        "shuffle": true,
        "shuffle_buffer": 100,

        "clamsa": false,
        "oracle": false,

        "tx_filter": [],
        "tx_filter_region": 1000,
        "seq_weights_window": 250,
        "seq_weights_value": 100,
        "compression": "GZIP"
    },

    "trainer": {
        "epochs": 100,
        "steps_per_epoch": 5000,
        "batch_size": 500,

        "lr": 1e-4,
        "use_lr_scheduler": false,
        "warmup_epochs": 1,
        "min_lr": 1e-4,
        "decay_rate": 0.9,

        "loss_f1_factor": 2.0,
        "model_save_dir": "./tiberius_training/"
    }
}