{
    "model": {
        "d_hidden": 64,
        "n_layers": 3,
        "output_size": 15,

        "lru": {
            "d_latent": 32,
            "r_min": 0.9,
            "r_max": 1.0,
            "max_phase": 0.314159265,
            "dropout": 0.1,
            "max_tree_depth": 13
        },

        "ffn_type": "glu",
        "ffn": {
            "units": 64,
            "bias": true,
            "dropout": 0.1,
            "activation_hidden": "swish",
            "activation_out": null
        },

        "hmm": {
            "heads": 1,
            "parallel_factor": 99,
            "use_reverse_strand": true,
            "compute_heads_sequentially": false,

            "embed": 32,
            "pre_hmm_softmax": false,
            "share_noncoding_params": false,
            "emitter_sigmoid_activation": true,

            "intron_state_chain": 1,
            "intron_chain_skips": false,
            "intron_chain_loop": false,
            "initial_exon_len": 100,
            "initial_intron_len": 10000,
            "initial_ir_len": 10000,
            "train_transitioner": false,

            "dropout_heads": 0,
            "nudge_IR": 0,
            "nudge_repeats_noncoding": 0.0,
            "intron_regularization": 0.0
        }
    },

    "dataset": {
        "train_paths": [
            "path/to/data_*.tfrecords"
        ],
        "validation_paths": [
            "path/to/data_0.tfrecords"
        ],

        "batch_size": 32,
        "T": 9999,
        "input_size": 6,
        "output_size": 15,
        "repeat": true,
        "shuffle": true,
        "shuffle_buffer": 100,

        "clamsa": false,
        "oracle": false,

        "tx_filter": [],
        "tx_filter_region": 1000,
        "seq_weights_window": 250,
        "seq_weights_value": 100,
        "compression": "GZIP"
    },

    "trainer": {
        "epochs": 100,
        "train_steps": 100,
        "val_steps": 100,

        "lr": 1e-3,
        "use_lr_scheduler": false,
        "warmup_epochs": 1,
        "min_lr": 1e-7,
        "decay_rate": 0.9,

        "loss_f1_factor": 2.0,
        "model_save_dir": "./tiberius_training/"
    }
}