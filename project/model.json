{
    "model": {
        "n_conv": 3,
        "filter_size": 128,
        "kernel_size": 9,

        "pool_size": 9,
        "n_lstm": 2,
        "units": 372,

        "hmm": {
            "heads": 1,
            "parallel_factor": 99,
            "use_reverse_strand": true,
            "compute_heads_sequentially": false,

            "intron_state_chain": 1,
            "intron_chain_skips": false,
            "intron_chain_loop": false,
            "initial_exon_len": 100,
            "initial_intron_len": 10000,
            "initial_ir_len": 10000,
            "train_transitioner": false
        }
    },

    "dataset": {
        "train_paths": [
            "path/to/data/*.tfrecords"
        ],
        "validation_paths": null,

        "batch_size": 500,
        "T": 9999,
        "repeat": true,
        "shuffle": true,
        "shuffle_buffer": 100
    },

    "trainer": {
        "epochs": 1000,
        "train_steps": 5000,
        "val_steps": 100,

        "lr": 1e-4,
        "weight_decay": 1e-2,
        "beta_1": 0.9,
        "beta_2": 0.999,
        "gradient_clip_norm": null,

        "lr_warmup": null,
        "lr_warmup_target": 1e-2,
        "lr_warmup_start": 1e-7,
        "lr_decay": 0.1,
        "lr_log_decay": null,
        "lr_log_decay_velocity": 10.0,

        "loss_f1_factor": 2.0,

        "log_annotation_metrics": [{
            "fasta": "path/to/genome.fa",
            "reference": "path/to/reference_cds.gtf",
            "gffcompare": "path/to/gffcompare",
            "take_seqs": null,
            "B": 50,
            "T": 99990,
            "use_head": 0,
            "every_n_epochs": 5,
            "use": "VITERBI",
            "liberal": true,
            "N_token": "track",
            "repeats_input": "track",
            "save_best_key": "locus/F1"
        }]
    }
}